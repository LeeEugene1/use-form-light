    "@types/react-dom": "^18.3.6",
    "esbuild": "^0.25.2",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.3.1",
    "typescript": "^5.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17 || ^18 || ^19",
