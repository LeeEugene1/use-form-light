    "form-validation",
    "validation",
    "typescript",
    "react-hooks"
  ],
  "homepage": "https://github.com/LeeEugene1/use-form-light#readme",
  "bugs": {
    "url": "https://github.com/LeeEugene1/use-form-light/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LeeEugene1/use-form-light.git"
  },
  "license": "MIT",
  "author": "LeeEugene",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.cjs"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
